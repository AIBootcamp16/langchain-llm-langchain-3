# MySQL Database
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=policy_db
MYSQL_USER=policy_user
MYSQL_PASSWORD=policypass123
MYSQL_ROOT_PASSWORD=rootpassword123
DATABASE_URL=mysql+pymysql://policy_user:policypass123@mysql:3306/policy_db

# Qdrant Vector DB
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=policies
QDRANT_API_KEY=  # Optional - leave empty if not using authentication
# 외부 접속: http://localhost:6335/dashboard

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-m3

# Tavily Web Search
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# LangSmith (Tracing & Evaluation)
# IMPORTANT: Use LANGCHAIN_ prefix (not LANGSMITH_)
LANGCHAIN_API_KEY=lsv2_your-langsmith-api-key-here
LANGCHAIN_PROJECT=policy-qa-agent
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Application Settings
APP_ENV=development  # development | production
LOG_LEVEL=INFO



